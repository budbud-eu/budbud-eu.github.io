---
import Layout from "../Layout.astro";
import Navbar from "../../components/elements/Navbar.astro";
import Footer from "../../components/elements/Footer.astro";

export interface Props {
    title: string;
}

const { title } = Astro.props;

const targetPage = import.meta.env.DEV ? "/soon" : "";

if (targetPage) {
    Astro.redirect(targetPage);
}
---

<Layout title={title}>
    <main class="flex flex-col gap-y-20 md:gap-y-32 overflow-hidden">
        <Navbar />
        <slot />
        <Footer />
    </main>
</Layout>
