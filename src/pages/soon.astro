---
import Container from "../components/shared/Container.astro";
import ThemeButton from "../components/shared/ThemeButton.astro";
import MaintenanceLayout from "../layouts/sub-layouts/MaintenanceLayout.astro";
import AddEmailForm from "../components/benchmark-email/AddEmailForm.svelte";

const authToken = import.meta.env.BENCHMARKEMAIL_AUTH_TOKEN;
const listId = import.meta.env.BENCHMARKEMAIL_CONTACT_LIST_ID;
---

<MaintenanceLayout maintenanceTitle="Soon...">
    <div class="min-h-screen flex flex-col overflow-y-hidden">
        <section class="flex-1 flex items-center">
            <Container
                className={"flex flex-col items-center gap-10 lg:gap-12 lg:px-10"}
            >
                <div
                    class="relative flex flex-col lg:py-7 xl:py-8
                        lg:max-w-none max-w-3xl mx-auto lg:mx-0 lg:flex-1 lg:w-1/2"
                >
                    <div class="flex gap-2 items-center">
                        <img
                            class="h-auto max-w-16 lg:max-w-24 rounded-full mb-2"
                            src="/logos/logo.svg"
                        />
                        <h1
                            class="text-6xl/tight sm:text-6xl/tight md:text-7xl/tight xl:text-8xl/tight
                            font-bold text-heading-1"
                        >
                            BudBud
                        </h1>
                    </div>

                    <span
                        class="type-welcome text-2xl/tight sm:text-3xl/tight md:text-4xl/tight xl:text-5xl/tight
                    font-bold text-transparent bg-clip-text bg-gradient-to-br from-blue-500 from-20% via-primary via-30% to-blue-500 mb-8"
                    ></span>

                    <AddEmailForm
                        client:load
                        authToken={authToken}
                        listId={listId}
                    />
                </div>
            </Container>
        </section>

        <ThemeButton className="fixed top-4 right-4" />
    </div>
</MaintenanceLayout>
